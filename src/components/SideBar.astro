---
import {GHPROFILE, LINKEDIN, EMAIL} from '../config'
import Icon from './Icon.astro'
---

<div class='drawer-side min-h-screen bg-base-200'>
  <label for='my-drawer' class='drawer-overlay'></label>
  <div
    class='menu flex min-h-full w-[21rem] p-4 lg:pt-4 pt-20'
  >
    <div class='w-fit'>
      <a href='/'>
        <div
          class='avatar transition ease-in-out w-3/5 hover:scale-[110%] block m-auto mt-3 mb-6'
        >
          <img class='mask mask-circle' src='/profile.jpg' alt='profile' />
        </div>
      </a>
    </div>
    <ul class='grow shrink min-h-full space-y-2 text-lg'>
      <li><a href='/' aria-label='Home'>Home</a></li>
      <li><a href='/cv' aria-label='CV'>CV</a></li>
      <li><a href='/games' aria-label='Games' data-astro-prefetch>Games</a></li>
      <li><a href='/resume.pdf' target='_blank' aria-label='Resume'>Resume</a></li>
      <li><a href={`mailto:${EMAIL}`} aria-label='Contact'>Contact</a></li>
    </ul>
    <div class='social-icons px-3 my-2 flex'>
      <a
        href={GHPROFILE}
        target='_blank'
        aria-label='Github'
        title='Github'
      >
        <Icon name='github'/>
      </a>
      <a
        href={LINKEDIN}
        target='_blank'
        class='mx-3'
        aria-label='Linkedin'
        title='Linkedin'
      >
        <Icon name='linkedin'/>
      </a>
    </div>
  </div>
</div>
